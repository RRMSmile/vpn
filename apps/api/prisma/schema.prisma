generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  role      String   @default("user")
  createdAt DateTime @default(now())

  devices Device[]
  peers   Peer[]
}

model MagicToken {
  tokenHash String    @id
  email     String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  @@index([email])
  @@index([expiresAt])
}

model Device {
  id        String   @id @default(cuid())
  userId    String
  deviceId  String
  name      String
  platform  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User   @relation(fields: [userId], references: [id])
  peers Peer[]

  @@unique([userId, deviceId], name: "userId_deviceId")
  @@index([userId])
}

model Node {
  id              String   @id
  name            String
  sshHost         String
  sshUser         String
  wgInterface     String   @default("wg0")
  wgPort          Int      @default(51820)
  endpointHost    String
  serverPublicKey String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  peers Peer[]
}

model Peer {
  id       String @id @default(cuid())
  userId   String
  deviceId String
  nodeId   String

  publicKey String
  allowedIp String
  revokedAt DateTime?
  createdAt DateTime  @default(now())

  user   User   @relation(fields: [userId], references: [id])
  device Device @relation(fields: [deviceId], references: [id])
  node   Node   @relation(fields: [nodeId], references: [id])

  @@unique([nodeId, publicKey])
  @@unique([nodeId, allowedIp])
  @@index([userId])
  @@index([deviceId])
  @@index([nodeId])
}
