{
  "name": "cloudgate-mvp",
  "private": true,
  "packageManager": "pnpm@9.15.9",
  "scripts": {
    "dev": "pnpm -r --parallel --filter @cloudgate/api --filter @cloudgate/web dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "db:migrate": "pnpm --filter @cloudgate/api prisma migrate dev",
    "db:deploy": "pnpm --filter @cloudgate/api prisma migrate deploy",
    "db:studio": "pnpm --filter @cloudgate/api prisma studio",
    "dev:api": "pnpm --filter @cloudgate/api dev",
    "dev:web": "pnpm --filter @cloudgate/web dev",
    "docker:db": "docker compose up -d db mailhog",
    "docker:down": "docker compose down",
    "docker:up": "docker compose up -d"
  },
  "devDependencies": {
    "typescript": "^5.5.4"
  }
}
